{
  "kind": "collectionType",
  "collectionName": "competitions",
  "info": {
    "singularName": "competition",
    "pluralName": "competitions",
    "displayName": "Competition"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "state": {
      "type": "enumeration",
      "required": true,
      "default": "ACTIVE",
      "enum": [
        "ACTIVE",
        "PAST"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "string",
      "required": true
    },
    "registerForm": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "state"
            },
            "ACTIVE"
          ]
        }
      },
      "required": true
    },
    "teaserLink": {
      "type": "string",
      "required": true
    },
    "time": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "googleMap": {
      "type": "string",
      "required": false
    },
    "register": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "state"
            },
            "ACTIVE"
          ]
        }
      },
      "required": true,
      "default": false
    },
    "surveyForm": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "state"
            },
            "PAST"
          ]
        }
      },
      "required": true
    }
  }
}
